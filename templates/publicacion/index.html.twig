{% extends 'base.html.twig' %}

{% block title %}Hello PublicacionController!{% endblock %}

{% block body %}
    <table>
        <thead>
        <th>ID</th>
        <th>Publicaciones</th>
        <th>Descripción</th>
        <th>Categoria</th>
        <th>Respuestas</th>
        <th>Fecha</th>
        </thead>

        <tbody>
        {% for publicacion in listado_publicaciones %}
            <tr>
                <td><a href="{{ path('publicacion-detalle',{id: publicacion.getId}) }}">{{ publicacion.getId() }}</a></td>
                <td><a href="{{ path('publicacion-detalle',{id: publicacion.getId}) }}">{{ publicacion.getTitulo() }}</a></td>
                <td>{{ publicacion.getContenido() }}</td>
                <td>{{ publicacion.getCategoria() }}</td>
                <td>{{ publicacion.getComentarios().count() }}</td>
                <td>{{ publicacion.getFechaPublicacion()|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3><span> << </span><span> < </span> Página 3 <span> > </span><span> >> </span></h3>
{% endblock %}
